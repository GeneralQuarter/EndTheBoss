<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondmenureduit"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="50sp"
        android:textColor="@android:color/black"
        android:id="@+id/titre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="@string/label_adresse_ip"
        android:textSize="18sp"
        android:id="@+id/adresseTf"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/edit_text_adresse_ip"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edit_text_adresse_ip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="4dp"
        android:hint="@string/hint_adresse_ip"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edit_text_nom_personnage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/label_nom_personnage"
        android:textSize="18sp"
        android:id="@+id/textView"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/titre"
        android:layout_alignStart="@+id/adresseTf"
        android:paddingBottom="10dp" />
    <EditText
        android:id="@+id/edit_text_nom_personnage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nom_personnage"
        android:background="@android:color/black"
        android:padding="4dp"

        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_connexion"
        android:background="@android:color/black"
        android:padding="15dp"
        android:layout_above="@+id/adresseTf"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp" />

</RelativeLayout>